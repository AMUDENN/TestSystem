<Application x:Class="TestSystem.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:TestSystem">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/ToastNotifications.Messages;component/Themes/Default.xaml" />
                <ResourceDictionary Source="Resources\Dictionaries\DataTemplate.xaml"/>
                <ResourceDictionary Source="Resources\Themes\LightTheme.xaml"/>
                <ResourceDictionary Source="Resources\Dictionaries\Images.xaml"/>
                <ResourceDictionary Source="Resources\Dictionaries\MainDictionary.xaml"/>
                <ResourceDictionary Source="Resources\WindowStyle\WindowStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
